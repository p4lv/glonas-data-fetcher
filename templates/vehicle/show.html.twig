{% extends 'base.html.twig' %}

{% block title %}{{ vehicle.name ?? 'Vehicle' }} - Glonass Import API{% endblock %}

{% block body %}
<div class="row mb-4">
    <div class="col-12">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('home') }}">Home</a></li>
                <li class="breadcrumb-item"><a href="{{ path('vehicles_index') }}">Vehicles</a></li>
                <li class="breadcrumb-item active">{{ vehicle.name ?? vehicle.externalId }}</li>
            </ol>
        </nav>
        <h1><i class="bi bi-truck"></i> {{ vehicle.name ?? 'Vehicle Details' }}</h1>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0"><i class="bi bi-info-circle"></i> Basic Information</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">ID:</dt>
                    <dd class="col-sm-8">{{ vehicle.id }}</dd>

                    <dt class="col-sm-4">External ID:</dt>
                    <dd class="col-sm-8"><code>{{ vehicle.externalId }}</code></dd>

                    <dt class="col-sm-4">Name:</dt>
                    <dd class="col-sm-8">{{ vehicle.name ?? 'N/A' }}</dd>

                    <dt class="col-sm-4">Plate Number:</dt>
                    <dd class="col-sm-8">{{ vehicle.plateNumber ?? 'N/A' }}</dd>

                    <dt class="col-sm-4">Created:</dt>
                    <dd class="col-sm-8">{{ vehicle.createdAt|date('Y-m-d H:i:s') }}</dd>

                    <dt class="col-sm-4">Updated:</dt>
                    <dd class="col-sm-8">{{ vehicle.updatedAt|date('Y-m-d H:i:s') }}</dd>
                </dl>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0"><i class="bi bi-geo-alt"></i> GPS Position</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Latitude:</dt>
                    <dd class="col-sm-8">{{ vehicle.latitude ? vehicle.latitude|number_format(6) : 'N/A' }}</dd>

                    <dt class="col-sm-4">Longitude:</dt>
                    <dd class="col-sm-8">{{ vehicle.longitude ? vehicle.longitude|number_format(6) : 'N/A' }}</dd>

                    <dt class="col-sm-4">Speed:</dt>
                    <dd class="col-sm-8">{{ vehicle.speed ? (vehicle.speed|number_format(1) ~ ' km/h') : 'N/A' }}</dd>

                    <dt class="col-sm-4">Course:</dt>
                    <dd class="col-sm-8">{{ vehicle.course ? (vehicle.course|number_format(1) ~ 'Â°') : 'N/A' }}</dd>

                    <dt class="col-sm-4">Last Position:</dt>
                    <dd class="col-sm-8">{{ vehicle.lastPositionTime ? vehicle.lastPositionTime|date('Y-m-d H:i:s') : 'Never' }}</dd>
                </dl>

                {% if vehicle.latitude and vehicle.longitude %}
                    <a href="https://www.google.com/maps?q={{ vehicle.latitude }},{{ vehicle.longitude }}"
                       target="_blank"
                       class="btn btn-outline-primary btn-sm">
                        <i class="bi bi-map"></i> View on Map
                    </a>
                {% endif %}
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="bi bi-collection"></i> Statistics</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h6>Tracks</h6>
                        <p class="lead">{{ vehicle.tracks|length }}</p>
                        <p class="text-muted">Total recorded track points</p>
                    </div>
                    <div class="col-md-6">
                        <h6>Command History</h6>
                        <p class="lead">{{ vehicle.commandHistories|length }}</p>
                        <p class="text-muted">Total command records</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="bi bi-code-square"></i> Additional Data (JSON)</h5>
            </div>
            <div class="card-body">
                {% if vehicle.additionalData %}
                    <pre class="bg-light p-3 rounded"><code>{{ vehicle.additionalData|json_encode(constant('JSON_PRETTY_PRINT')) }}</code></pre>
                {% else %}
                    <p class="text-muted">No additional data available</p>
                {% endif %}
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12">
        <a href="{{ path('vehicles_index') }}" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
        <form method="post" action="{{ path('vehicles_delete', {id: vehicle.id}) }}"
              onsubmit="return confirm('Are you sure you want to delete this vehicle?');"
              style="display: inline;">
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash"></i> Delete Vehicle
            </button>
        </form>
    </div>
</div>
{% endblock %}
