                            <span class="badge bg-primary fs-5 me-2">üõ∞Ô∏è</span>
                            <div>
                                <small class="text-muted d-block">GPS Trackers</small>
                                <a href="{{ path('vehicles_index', {device_type: 'gps_tracker', q: searchQuery, status: gpsStatusFilter, limit: perPage}) }}" class="text-decoration-none">
                                    <strong class="fs-5">{{ deviceTypeStats.gps_tracker.total }}</strong>
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="d-flex align-items-center justify-content-center">
