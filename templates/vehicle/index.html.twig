{% extends 'base.html.twig' %}

{% block title %}Vehicles - Glonass Import API{% endblock %}

{% block body %}
<div class="row mb-4">
    <div class="col-12">
        <h1><i class="bi bi-truck"></i> Vehicles</h1>
    </div>
</div>

<div class="row">
    <div class="col-12">
        {% if vehicles|length > 0 %}
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>External ID</th>
                            <th>Name</th>
                            <th>Plate Number</th>
                            <th>GPS Position</th>
                            <th>Speed</th>
                            <th>Course</th>
                            <th>Last Position</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for vehicle in vehicles %}
                            <tr>
                                <td>{{ vehicle.id }}</td>
                                <td><code>{{ vehicle.externalId }}</code></td>
                                <td>{{ vehicle.name ?? 'N/A' }}</td>
                                <td>{{ vehicle.plateNumber ?? 'N/A' }}</td>
                                <td>
                                    {% if vehicle.latitude and vehicle.longitude %}
                                        <small>{{ vehicle.latitude|number_format(6) }}, {{ vehicle.longitude|number_format(6) }}</small>
                                    {% else %}
                                        <span class="text-muted">No position</span>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if vehicle.speed %}
                                        {{ vehicle.speed|number_format(1) }} km/h
                                    {% else %}
                                        <span class="text-muted">N/A</span>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if vehicle.course %}
                                        {{ vehicle.course|number_format(1) }}Â°
                                    {% else %}
                                        <span class="text-muted">N/A</span>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if vehicle.lastPositionTime %}
                                        <small>{{ vehicle.lastPositionTime|date('Y-m-d H:i:s') }}</small>
                                    {% else %}
                                        <span class="text-muted">Never</span>
                                    {% endif %}
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a href="{{ path('vehicles_show', {id: vehicle.id}) }}" class="btn btn-primary" title="View">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <form method="post" action="{{ path('vehicles_delete', {id: vehicle.id}) }}"
                                              onsubmit="return confirm('Are you sure you want to delete this vehicle?');"
                                              style="display: inline;">
                                            <button type="submit" class="btn btn-danger" title="Delete">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            <div class="mt-3">
                <p class="text-muted">Total: {{ vehicles|length }} vehicles</p>
            </div>
        {% else %}
            <div class="alert alert-info">
                <h4 class="alert-heading"><i class="bi bi-info-circle"></i> No Vehicles Found</h4>
                <p>No vehicles have been imported yet. Run the parse command to import vehicles from Glonass API.</p>
                <hr>
                <p class="mb-0">
                    <code>php bin/console app:parse:vehicles</code>
                </p>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}
